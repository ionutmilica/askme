<div class="well billboard">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Ask and answer</h1>
        <%= link_to 'Join Now!', new_user_registration_path, :class => 'btn btn-success cta' %>
      </div>
    </div> <!-- end of row -->
    <div class="row clearfix">
      <div class="col-md-12">
        <div class="store-ctas pull-right">
          <button class="btn btn-default">Google Play</button>
          <button class="btn btn-default">Appstore</button>
        </div> <!-- end of store-ctas -->
        <div class="pull-left">
          <span>See who's here</span>

          <div class="arrow"></div>
        </div>
      </div>
    </div>
  </div> <!-- end of container -->
</div> <!-- end of well -->

<div class="container">
    <div class="row friends">
        <div class="col-md-12">
          <ul class="list-inline">
            <% @users.each do |user| %>
                <li>
                  <a href="<%= profile_answers_path(user.username) %>"><%= image_tag user.avatar_url %></a>
                </li>
            <% end %>
          </ul>
        </div>
    </div> <!-- end of row/friends -->
    <div class="row lang">
        <div class="col-md-12">
          <ul class="breadcrumb">
            <li class="active"><a href="#">English</a></li>
            <li><a href="#">Romana</a></li>
          </ul>
        </div>
    </div> <!-- end of row/lang -->
</div> <!-- end of container -->
